{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@assets": [
        "src/assets"
      ],
      "@config": [
        "src/config"
      ],
      "@mock": [
        "src/mock"
      ],
      "@models": [
        "src/models"
      ],
      "@pages": [
        "src/pages"
      ],
      "@types": [
        "src/types"
      ],
      "@utils": [
        "src/utils"
      ],
      "@components": [
        "src/components"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
